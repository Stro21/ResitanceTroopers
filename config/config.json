{
    "specialization": {
    },

    "databaseConfig": {
        "mongoDbUrl": "mongodb://localhost:27017/",
        "dbName": "resistance-troopers-database"
    },

    "middleware": {

        "static": {
            "module": {
                "arguments": [ "path:./.build" ]
            }
        },

        "router": {
            "module": {
                "arguments": [{ "directory": "path:./controllers" }]
            }
        },

        "appsec": {
            "enabled": false,
            "priority": 110,
            "module": {
                "name": "lusca",
                "arguments": [
                    {
                        "csrf": false,
                        "p3p": false,
                        "xframe": "SAME-ORIGIN",
                        "csp": false
                    }
                ]
            }
        }


    }
}
